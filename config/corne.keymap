#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define BASE  0
#define LOWER 1
#define RAISE 2
#define MOUSE 3
#define ADJUST 4
#define MINIMAK 5

#include "includes/combos.dtsi"

// Define your default speeds
#define ZMK_POINTING_DEFAULT_MOVE_VAL 1250
#define ZMK_POINTING_DEFAULT_SCRL_VAL 100
#define U_MOUSE_MOVE_EXPONENT 1
#define U_MOUSE_MOVE_TIME 1500
#define U_MOUSE_MOVE_DELAY 0
#define U_MOUSE_SCROLL_EXPONENT 1
#define U_MOUSE_SCROLL_TIME 5000
#define U_MOUSE_SCROLL_DELAY 0

// New Custom Defines
#define HYPER LC(LA(LS(LGUI)))
#define MEH LC(LS(LALT))
#define COPY LC(INS)
#define PASTE LS(INS)

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
//    ┌────┬───┬────────────┬─────────────┬────────────┬────────┐       ┌────────┬────────────┬─────────────┬────────────┬───┬──────────┐
//    │ ⇥  │ Q │ MT HYPER W │  MT MEH E   │     R      │   T    │       │   Y    │     U      │  MT MEH I   │ MT HYPER O │ P │    ⏎     │
//    ├────┼───┼────────────┼─────────────┼────────────┼────────┤       ├────────┼────────────┼─────────────┼────────────┼───┼──────────┤
//    │ ⌃⇥ │ A │     S      │      D      │     F      │   G    │       │   H    │     J      │      K      │     L      │ ; │    '     │
//    ├────┼───┼────────────┼─────────────┼────────────┼────────┤       ├────────┼────────────┼─────────────┼────────────┼───┼──────────┤
//    │ ⌘⇥ │ Z │     X      │      C      │     V      │   B    │       │   N    │     M      │      ,      │     .      │ / │ MT ⌃⌥ 🌍 │
//    └────┴───┴────────────┼─────────────┼────────────┼────────┤       ├────────┼────────────┼─────────────┼────────────┴───┴──────────┘
//                          │ LT MOUSE ⌃W │ LT LOWER ⎋ │ MT ⇧ ␣ │       │ MT ⇧ ␣ │ LT RAISE ⌫ │ LT ADJUST ⌦ │
//                          └─────────────┴────────────┴────────┘       └────────┴────────────┴─────────────┘
  &kp TAB       &kp Q   &mt HYPER W   &mt MEH E         &kp R           &kp T                      &kp Y              &kp U            &mt MEH I        &mt HYPER O   &kp P      &kp RET
  &kp LC(TAB)   &kp A   &kp S         &kp D             &kp F           &kp G                      &kp H              &kp J            &kp K            &kp L         &kp SEMI   &kp SQT
  &kp LG(TAB)   &kp Z   &kp X         &kp C             &kp V           &kp B                      &kp N              &kp M            &kp COMMA        &kp DOT       &kp FSLH   &mt LC(LALT) K_CMENU
                                      &lt MOUSE LC(W)   &lt LOWER ESC   &mt LSHIFT SPACE           &mt RSHIFT SPACE   &lt RAISE BSPC   &lt ADJUST DEL
            >;
        };

        lower_layer {
            bindings = <
//    ┌───┬───┬───┬────┬────┬───┐       ┌───┬───┬───┬───┬───┬────┐
//    │   │   │   │    │    │   │       │ ^ │ 7 │ 8 │ 9 │ + │ *  │
//    ├───┼───┼───┼────┼────┼───┤       ├───┼───┼───┼───┼───┼────┤
//    │ ⇪ │   │   │    │    │   │       │ ( │ 4 │ 5 │ 6 │ 0 │ %% │
//    ├───┼───┼───┼────┼────┼───┤       ├───┼───┼───┼───┼───┼────┤
//    │   │   │   │ 📄 │ 📋 │   │       │ ) │ 1 │ 2 │ 3 │ - │ /  │
//    └───┴───┴───┼────┼────┼───┤       ├───┼───┼───┼───┴───┴────┘
//                │    │    │   │       │ = │   │   │
//                └────┴────┴───┘       └───┴───┴───┘
  &trans       &trans   &trans   &trans     &trans      &trans           &kp CARET   &kp N7   &kp N8   &kp N9   &kp PLUS    &kp ASTRK
  &caps_word   &trans   &trans   &trans     &trans      &trans           &kp LPAR    &kp N4   &kp N5   &kp N6   &kp N0      &kp PRCNT
  &trans       &trans   &trans   &kp COPY   &kp PASTE   &trans           &kp RPAR    &kp N1   &kp N2   &kp N3   &kp MINUS   &kp FSLH
                                 &trans     &trans      &trans           &kp EQUAL   &trans   &trans
            >;
        };

        raise_layer {
            bindings = <
//    ┌───┬────┬────┬─────┬─────┬─────┐       ┌───┬───┬───┬───┬───┬───┐
//    │   │ !  │ @  │  #  │  $  │ %%  │       │ ^ │ & │ * │ ( │ ) │   │
//    ├───┼────┼────┼─────┼─────┼─────┤       ├───┼───┼───┼───┼───┼───┤
//    │   │ F1 │ F2 │ F3  │ F4  │ F5  │       │ - │ = │ [ │ ] │ \ │ ` │
//    ├───┼────┼────┼─────┼─────┼─────┤       ├───┼───┼───┼───┼───┼───┤
//    │   │ F6 │ F7 │ F8  │ F9  │ F10 │       │ _ │ + │ { │ } │ | │ ~ │
//    └───┴────┴────┼─────┼─────┼─────┤       ├───┼───┼───┼───┴───┴───┘
//                  │ F11 │ F12 │ F13 │       │   │   │   │
//                  └─────┴─────┴─────┘       └───┴───┴───┘
  &trans   &kp EXCL   &kp AT   &kp HASH   &kp DLLR   &kp PRCNT           &kp CARET   &kp AMPS    &kp ASTRK   &kp LPAR   &kp RPAR   &trans
  &trans   &kp F1     &kp F2   &kp F3     &kp F4     &kp F5              &kp MINUS   &kp EQUAL   &kp LBKT    &kp RBKT   &kp BSLH   &kp GRAVE
  &trans   &kp F6     &kp F7   &kp F8     &kp F9     &kp F10             &kp UNDER   &kp PLUS    &kp LBRC    &kp RBRC   &kp PIPE   &kp TILDE
                               &kp F11    &kp F12    &kp F13             &trans      &trans      &trans
            >;
        };

        mouse_layer {
            bindings = <
//    ┌───┬───┬───┬───┬───┬───┐       ┌───────┬───────┬───────┬───────┬──────┬───┐
//    │ ∅ │ ∅ │ ∅ │ ∅ │ ∅ │ ∅ │       │   ∅   │   ∅   │   ∅   │   ∅   │  ∅   │ ∅ │
//    ├───┼───┼───┼───┼───┼───┤       ├───────┼───────┼───────┼───────┼──────┼───┤
//    │ ∅ │ ∅ │ ∅ │ ∅ │ ∅ │ ∅ │       │  🖱️←  │ 🖱️📜↓ │  🖱️↑  │  🖱️→  │ 🖱️F5 │ ∅ │
//    ├───┼───┼───┼───┼───┼───┤       ├───────┼───────┼───────┼───────┼──────┼───┤
//    │ ∅ │ ∅ │ ∅ │ ∅ │ ∅ │ ∅ │       │ 🖱️📜← │ 🖱️📜↓ │ 🖱️📜↑ │ 🖱️📜→ │ 🖱️B4 │ ∅ │
//    └───┴───┴───┼───┼───┼───┤       ├───────┼───────┼───────┼───────┴──────┴───┘
//                │ ∅ │ ∅ │ ∅ │       │  🖱️L  │  🖱️R  │  🖱️M  │
//                └───┴───┴───┘       └───────┴───────┴───────┘
  &none   &none   &none   &none   &none   &none           &none            &none            &none          &none             &none      &none
  &none   &none   &none   &none   &none   &none           &mmv MOVE_LEFT   &mmv MOVE_DOWN   &mmv MOVE_UP   &mmv MOVE_RIGHT   &mkp MB5   &none
  &none   &none   &none   &none   &none   &none           &msc SCRL_LEFT   &msc SCRL_DOWN   &msc SCRL_UP   &msc SCRL_RIGHT   &mkp MB4   &none
                          &none   &none   &none           &mkp MB1         &mkp MB2         &mkp MB3
            >;
        };

        adjust_layer {
            bindings = <
//    ┌──────┬────┬────┬────┬────┬────┐       ┌────┬────┬───┬───┬───┬───┐
//    │ 🛜❌ │ 🔇 │    │    │    │ 🔌 │       │ ⇱  │ ⇲  │ ⇞ │ ⇟ │   │   │
//    ├──────┼────┼────┼────┼────┼────┤       ├────┼────┼───┼───┼───┼───┤
//    │ 🛜🔼 │ 🔊 │ 🔆 │    │    │    │       │ ←  │ ↓  │ ↑ │ → │   │   │
//    ├──────┼────┼────┼────┼────┼────┤       ├────┼────┼───┼───┼───┼───┤
//    │ 🛜🔽 │ 🔉 │ 🔅 │    │ 🔄 │ 💾 │       │ 💾 │ 🔄 │   │   │   │   │
//    └──────┴────┴────┼────┼────┼────┤       ├────┼────┼───┼───┴───┴───┘
//                     │ 🔓 │    │    │       │    │    │   │
//                     └────┴────┴────┘       └────┴────┴───┘
  &bt BT_CLR   &kp C_MUTE     &trans         &trans           &trans       &ext_power EP_TOG           &kp HOME      &kp END      &kp PG_UP   &kp PG_DN   &trans   &trans
  &bt BT_NXT   &kp C_VOL_UP   &kp C_BRI_UP   &trans           &trans       &trans                      &kp LEFT      &kp DOWN     &kp UP      &kp RIGHT   &trans   &trans
  &bt BT_PRV   &kp C_VOL_DN   &kp C_BRI_DN   &trans           &sys_reset   &bootloader                 &bootloader   &sys_reset   &trans      &trans      &trans   &trans
                                             &studio_unlock   &trans       &trans                      &trans        &trans       &trans
            >;
        };

        minimak_layer {
            bindings = <
//    ┌────┬───┬────────────┬─────────────┬────────────┬────────┐       ┌────────┬────────────┬─────────────┬────────────┬───┬──────────┐
//    │ ⇥  │ Q │ MT HYPER W │  MT MEH D   │     F      │   K    │       │   Y    │     U      │  MT MEH I   │ MT HYPER L │ ; │    ⏎     │
//    ├────┼───┼────────────┼─────────────┼────────────┼────────┤       ├────────┼────────────┼─────────────┼────────────┼───┼──────────┤
//    │ ⌃⇥ │ A │     S      │      T      │     R      │   G    │       │   H    │     N      │      E      │     O      │ P │    '     │
//    ├────┼───┼────────────┼─────────────┼────────────┼────────┤       ├────────┼────────────┼─────────────┼────────────┼───┼──────────┤
//    │ ⌘⇥ │ Z │     X      │      C      │     V      │   B    │       │   J    │     M      │      ,      │     .      │ / │ MT ⌃⌥ 🌍 │
//    └────┴───┴────────────┼─────────────┼────────────┼────────┤       ├────────┼────────────┼─────────────┼────────────┴───┴──────────┘
//                          │ LT MOUSE ⌃W │ LT LOWER ⎋ │ MT ⇧ ␣ │       │ MT ⇧ ␣ │ LT RAISE ⌫ │ LT ADJUST ⌦ │
//                          └─────────────┴────────────┴────────┘       └────────┴────────────┴─────────────┘
  &kp TAB       &kp Q   &mt HYPER W   &mt MEH D         &kp F           &kp K                      &kp Y              &kp U            &mt MEH I        &mt HYPER L   &kp SEMI   &kp RET
  &kp LC(TAB)   &kp A   &kp S         &kp T             &kp R           &kp G                      &kp H              &kp N            &kp E            &kp O         &kp P      &kp SQT
  &kp LG(TAB)   &kp Z   &kp X         &kp C             &kp V           &kp B                      &kp J              &kp M            &kp COMMA        &kp DOT       &kp FSLH   &mt LC(LALT) K_CMENU
                                      &lt MOUSE LC(W)   &lt LOWER ESC   &mt LSHIFT SPACE           &mt RSHIFT SPACE   &lt RAISE BSPC   &lt ADJUST DEL
            >;
        };
    };
};

#include "includes/mouse.dtsi"
